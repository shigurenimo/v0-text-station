{
  "$schema": "node_modules/@biomejs/biome/configuration_schema.json",
  "formatter": {
    "indentStyle": "space"
  },
  "linter": {
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "error"
      },
      "nursery": {
        "useSortedClasses": "error"
      }
    },
    "ignore": ["components/ui/**/*", "hooks/use-toast.ts", "route-tree.gen.ts"]
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  },
  "files": {
    "ignore": [
      ".next",
      "components.json",
      "components/theme-provider.tsx",
      "components/ui/**/*",
      "hooks/use-toast.ts",
      "lib/utils.ts",
      "next.config.mjs",
      "postcss.config.mjs",
      "tailwind.config.ts"
    ]
  }
}
